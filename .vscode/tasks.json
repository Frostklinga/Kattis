{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Mono run",
            "type": "shell",
            "command": "mono",
            "args": [
                "${fileDirname}/Program.exe"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Mono build",
            "type": "shell",
            "command": "mono-csc",
            "args": [
                "${fileDirname}/Program.cs"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "monodebug",
            "type": "process",
            "command": "mono",
            "args": [
                "--debug",
                "--debugger-agent=transport=dt_socket,server=y,address=localhost:55550",
                //     "${fileDirname}/Program.exe"
                "/workspaces/Kattis/BuildingHighways/Program.exe"
                // ],
                // "command": "echo",
                // "args": [
                //     "Testing tasks json"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "suppressTaskName": true
        }
    ]
}